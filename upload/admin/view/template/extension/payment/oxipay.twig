{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-oxipay" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                </button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li>
                    <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_oxipay_warning %}
        <div class="alert alert-danger">
            <i class="fa fa-exclamation-circle"></i> {{ error_oxipay_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">

                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-oxipay" class="form-horizontal">
                    <fieldset>
                        <legend>{{ text_heading_display }}</legend>
                        <p>{{ text_description_display }}</p>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-title">
                                <span data-toggle="tooltip" title="{{ help_title }}">{{ entry_title }}</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_oxipay_title" value="{{ payment_oxipay_title }}" placeholder="{{ entry_title }}" id="input-title" class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-description">
                                <span data-toggle="tooltip" title="{{ help_description }}">{{ entry_description }}</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_oxipay_description" value="{{ payment_oxipay_description }}" placeholder="{{ entry_description }}" id="input-description"
                                    class="form-control" />
                            </div>
                        </div>
                    </fieldset>

                    <fieldset>
                        <legend>{{ text_heading_shop }}</legend>
                        <p>{{ text_description_shop }}</p>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-shop-name">
                                <span data-toggle="tooltip" title="{{ help_shop_name }}">{{ entry_shop_name }}</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_oxipay_shop_name" value="{{ payment_oxipay_shop_name }}" placeholder="{{ entry_shop_name }}" id="input-shop-name"
                                    class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-region">{{ entry_region }}</label>
                            <div class="col-sm-10">
                                <select name="payment_oxipay_region" id="input-region" class="form-control">
                                    <option value="">{{ text_select }}</option>
                                    {% for region in regions %}
                                    <option value="{{ region.code }}" {{ region.code == payment_oxipay_region ? ' selected' : '' }}>{{ region.name }}</option>
                                    {% endfor %}
                                </select>
                                {% if error_oxipay_region %}
                                <div class="text-danger">{{ error_oxipay_region }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </fieldset>

                    <fieldset>
                        <legend>{{ text_heading_gateway }}</legend>
                        <p>{{ text_description_gateway }}</p>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-gateway-environment">{{ entry_gateway_environment }}</label>
                            <div class="col-sm-10">
                                <select name="payment_oxipay_gateway_environment" id="input-gateway-environment" class="form-control">
                                    {% for gateway_environment in gateway_environments %}
                                    <option value="{{ gateway_environment.code }}" {{ gateway_environment.code == payment_oxipay_gateway_environment ? ' selected' : '' }}>{{ gateway_environment.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group{{ payment_oxipay_gateway_environment  !=  'other' ? ' hidden' : ''}}">
                            <label class="col-sm-2 control-label" for="input-gateway-url">
                                <span data-toggle="tooltip" title="{{ help_gateway_url }}">{{ entry_gateway_url }}</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_oxipay_gateway_url" value="{{ payment_oxipay_gateway_url }}" placeholder="{{ entry_gateway_url }}" id="input-gateway-url" class="form-control" /> 
                                {% if error_oxipay_gateway_url %}
                                <div class="text-danger">{{ error_oxipay_gateway_url }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-merchant-id">
                                <span data-toggle="tooltip" title="{{ help_merchant_id }}">{{ entry_merchant_id }}</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_oxipay_merchant_id" value="{{ payment_oxipay_merchant_id }}" placeholder="{{ entry_merchant_id }}" id="input-merchant-id" class="form-control" /> 
                                {% if error_oxipay_merchant_id %}
                                <div class="text-danger">{{ error_oxipay_merchant_id }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-api-key">
                                <span data-toggle="tooltip" title="{{ help_api_key }}">{{ entry_api_key }}</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_oxipay_api_key" value="{{ payment_oxipay_api_key }}" placeholder="{{ entry_api_key }}" id="input-api-key" class="form-control" /> 
                                {% if error_oxipay_api_key %}
                                <div class="text-danger">{{ error_oxipay_api_key }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </fieldset>

                    <fieldset>
                        <legend>{{ text_heading_general }}</legend>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-order-status-completed">{{ entry_order_status_completed }}</label>
                            <div class="col-sm-10">
                                <select name="payment_oxipay_order_status_completed_id" id="input-order-status-completed" class="form-control">
                                    {% for order_status in order_statuses %}
                                    <option value="{{ order_status.order_status_id }}" {{ order_status.order_status_id == payment_oxipay_order_status_completed_id ? ' selected' : '' }}>{{ order_status.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-order-status-pending">{{ entry_order_status_pending }}</label>
                            <div class="col-sm-10">
                                <select name="payment_oxipay_order_status_pending_id" id="input-order-status-pending" class="form-control">
                                    {% for order_status in order_statuses %}
                                    <option value="{{ order_status.order_status_id }}" {{ order_status.order_status_id == payment_oxipay_order_status_pending_id ? ' selected' : '' }}>{{ order_status.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-order-status-failed">{{ entry_order_status_failed }}</label>
                            <div class="col-sm-10">
                                <select name="payment_oxipay_order_status_failed_id" id="input-order-status-failed" class="form-control">
                                    {% for order_status in order_statuses %}
                                    <option value="{{ order_status.order_status_id }}" {{ order_status.order_status_id == payment_oxipay_order_status_failed_id ? ' selected' : '' }}>{{ order_status.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                            <div class="col-sm-10">
                                <select name="payment_oxipay_geo_zone_id" id="input-geo-zone" class="form-control">
                                    <option value="0">{{ text_all_zones }}</option>
                                    {% for geo_zone in geo_zones %}
                                    <option value="{{ geo_zone.geo_zone_id }}" {{ geo_zone.geo_zone_id == payment_oxipay_geo_zone_id ? ' selected' : '' }}>{{ geo_zone.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                            <div class="col-sm-10">
                                <select name="payment_oxipay_status" id="input-status" class="form-control">
                                    <option value="1" {{ payment_oxipay_status ? ' selected' : '' }}>{{ text_enabled }}</option>
                                    <option value="0" {{ not payment_oxipay_status ? ' selected' : '' }}>{{ text_disabled }}</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                            <div class="col-sm-10">
                                <input type="text" name="payment_oxipay_sort_order" value="{{ oxipay_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order"
                                    class="form-control" />
                            </div>
                        </div>
                    </fieldset>
                </form>

            </div>
        </div>
    </div>
</div>
<script>
    (function ($) {
        $('#input-gateway-environment').on('change', function (e) {
            var isOther = $(this).val() == 'other',
                urlEl = $('#input-gateway-url').closest('.form-group');

            urlEl[isOther ? 'removeClass' : 'addClass']('hidden');
        }).trigger('change');
    })(jQuery);
</script>
{{ footer }}